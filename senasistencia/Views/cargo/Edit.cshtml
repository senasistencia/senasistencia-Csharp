@model senasistencia.Models.cargo

@{
    ViewBag.Title = "Editar";
}



<div class="col s12 m8 push-m2 card-panel margen">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
    <div class="row formulario">

    <h4 class="center-align">Editar - Cargo</h4>
    <div class="divider"></div>
    <div class="section">
           @Html.HiddenFor(model => model.ID_Cargo)
          <div class="col s12 m10 offset-m1 input-field">
             @Html.EditorFor(model => model.Tipo_Cargo, new { htmlAttributes = new { @class = "" } })
            @Html.LabelFor(model => model.Tipo_Cargo, htmlAttributes: new { @class = "" })
          </div>
          <div class="col s12 m10 offset-m1 input-field">
             @Html.EditorFor(model => model.FechaDeCreacion_Cargo, new { htmlAttributes = new { @type = "date" } })   
          </div>
         
        <div class="col s12 m10 offset-m1">
				<!--el estado solo estara disponible para edicion-->
        <input class="filled-in" id="Estado_Cargo" name="Estado_Cargo" type="checkbox" value="true" checked>
        @Html.LabelFor(model => model.Estado_Cargo)
        </div>

                
      </div>
          <div class="col s12 m12 center-align">
              <input type="submit" value="Guardar" class="btn waves-effect" />
          </div>
      </div>

        }
</div>


<div class="input-field col s12 m10 push-s1">
    @Html.ActionLink("Listado", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>