@model senasistencia.Models.sede

@{
    ViewBag.Title = "Crear";
}

<div class="col s12 m8 push-m2 card-panel margen">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
    <div class="row formulario">

    <h4 class="center-align">Sede</h4>
    <div class="divider"></div>
    <div class="section">
           
          <div class="col s12 m10 offset-m1 input-field">
             @Html.EditorFor(model => model.Nombre_Sede, new { htmlAttributes = new { @class = "" } })
             @Html.LabelFor(model => model.Nombre_Sede, htmlAttributes: new { @class = "" })
          </div>

          <div class="col s12 m10 offset-m1 input-field">
             @Html.EditorFor(model => model.Direccion_Sede, new { htmlAttributes = new { @class = "" } })   
             @Html.LabelFor(model => model.Direccion_Sede, htmlAttributes: new { @class = "" })
          </div>
          <div class="col s12 m10 offset-m1 input-field">
             @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "" } })
             @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "" })
          </div>

          <div class="col s12 m10 offset-m1 input-field">
             @Html.DropDownList("ID_Centro", null, htmlAttributes: new { @class = "" })
             @Html.LabelFor(model => model.ID_Centro, "ID_Centro", htmlAttributes: new { @class = "" })   
          </div>
          @Html.LabelFor(model => model.FechaDeCreacion_Sede, htmlAttributes: new { @class = "col s12 m10 offset-m1 input-field" })
          <div class="col s12 m10 offset-m1 input-field">
             @Html.EditorFor(model => model.FechaDeCreacion_Sede, new { htmlAttributes = new { @type = "date" } })   
             
          </div>
				<!--el estado solo estara disponible para edicion-->
        <input class="filled-in" id="Estado_sede" name="Estado_sede" type="checkbox" value="true" checked>
        @Html.HiddenFor(model => model.Estado_sede)


                
      </div>
          <div class="col s12 m12 center-align">
              <input type="submit" value="Crear" class="btn waves-effect" />
          </div>
      </div>

        }
</div>


<div class="input-field col s12 m10 push-s1">
    @Html.ActionLink("Listado", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>